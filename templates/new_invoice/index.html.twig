{% extends 'base.html.twig' %}

{% block title %}Created New Invoice{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Createad New Invoice âœ…</h1>
    {{ form_start(form) }}
    {{ form_row(form.dateInvoice) }}
    {{ form_row(form.customerId) }}

    <h3>InvoiceLines</h3>
    <div class="row invoiceLines" data-index="{{ form.invoiceLines|length > 0 ? form.invoiceLines|last.vars.name + 1 : 0 }}"
         data-prototype="{{ form_widget(form.invoiceLines.vars.prototype)|e('html_attr') }}">
        {% for invoice in form.invoiceLines %}
            <div class="col-4">{{ form_row(invoice.description) }}</div>
            <div class="col-4">{{ form_row(invoice.quantity) }}</div>
            <div class="col-4">{{ form_row(invoice.amount) }}</div>
        {% endfor %}


    </div>

    {{ form_end(form) }}


{% endblock %}
